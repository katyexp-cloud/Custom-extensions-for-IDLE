__init__
Windows:

        text.bind('<Control-MouseWheel>', self.superb_scroll)
        text.bind('<Shift-MouseWheel>', self.super_scroll)
        self.text.bind("<MouseWheel>", self.handle_scroll)
        self.text.bind("<F12>", self.toggle_colors)
        self.text.bind("<F11>", self.toggle_scroll_mode)

Method:
    def toggle_scroll_mode(self, event=None):
        self.use_smooth_scroll = not self.use_smooth_scroll
        mode = "Smooth" if self.use_smooth_scroll else "Slow/Precise"
        print(f"Scroll mode swtiched to: {mode}")

    def handle_scroll(self, event):
        if self.use_smooth_scroll:
            return self.smooth_scroll(event)
        else:
            return self.slow_scroll(event)

    def smooth_scroll(self, event):
        pixels_to_move = -(event.delta // 120) * 60 
        self._animate_scroll(pixels_to_move)
        return "break"

    def _animate_scroll(self, remaining):
        if abs(remaining) > 0.5:  # Stop when the movement is negligible
            step = remaining * 0.25 # Move 25% of the distance each frame
            self.text.yview_scroll(int(step), "pixels")
            # Schedule the next frame in 10ms
            self.text.after(10, lambda: self._animate_scroll(remaining - step))


    def superb_scroll(self, event):
        lines = 0
        if event.delta:
            lines = -(event.delta // 120) * 40 
        
        self.text.yview_scroll(lines, "units")
        return "break" 


    def super_scroll(self, event):
        lines = 0
        if event.delta: 
            lines = -(event.delta // 120) * 10 
        
        self.text.yview_scroll(lines, "units")
        return "break"

    def slow_scroll(self, event):
        lines = 0
        if event.delta: 
            lines = -(event.delta // 120) * 1 
        
        self.text.yview_scroll(lines, "units")
        return "break"
